# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!

# Database Configuration
POSTGRES_USER=telegram_secrets
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=telegram_secrets_db
DATABASE_URL=postgresql://telegram_secrets:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/telegram_secrets_db

# JWT Configuration
JWT_SECRET=CHANGE_ME_RANDOM_64_CHAR_STRING_HERE

# PushinPay Configuration
PUSHINPAY_TOKEN=your_pushinpay_production_token_here

# Application URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Node Environment
NODE_ENV=production

# Server Ports (Docker internal)
PORT=3001

# ==============================================
# GENERATION COMMANDS
# ==============================================
# Generate JWT_SECRET:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# Generate POSTGRES_PASSWORD:
# openssl rand -base64 32
